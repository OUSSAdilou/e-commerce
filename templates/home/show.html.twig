{% extends 'base.html.twig' %}

{% block title %}Accueil {% endblock %}

{% block body %}
    <div class="container">

        <div class="card mb-12" style="margin-top: 70px">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="{{ asset ('uploads/images/'~produit.image) }}" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h1 class="card-title text-success">{{produit.nom}}</h1>
                        <p class="card-text">{{produit.description}}</p>
                        <h3>{{produit.prix}} $</h3>
                        <a href="" class="text-success">Ajouter au panier</a>
                        <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
                    </div>
                </div>
            </div>
        </div>
        <h2>Derniers produits ajout√©s</h2>
        <div class="row">
            {% for produit in produits %}
                <div class="col-md-3" mt-4>
                    <div class="card" style="width: 18rem;">
                        <img src="{{ asset ('uploads/images/'~produit.image) }}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <a style="text-decoration: none; color: green;" href="{{path('app_home_produit_show',{'id':produit.id}) }}"><h5 class="card-title">{{produit.nom}}</h5></a>
                            <p class="card-text">{{produit.description|slice(0,60)}}...</p>
                            <h3>{{produit.prix}} $</h3>
                            <a href="#" class="text-success">Ajouter au panier</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}