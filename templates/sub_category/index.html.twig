{% extends 'base.html.twig' %}

{% block title %}Sous catégories{% endblock %}

{% block body %}
<div class="container">
    <h1>Sous catégories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Catégories</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sub_category in sub_categories %}
            <tr>
                <td>{{ sub_category.id }}</td>
                <td>{{ sub_category.name }}</td>
                <td>{{ sub_category.category.nom }}</td>
                <td>
                    <a class="btn btn-outline-primary" href="{{ path('app_sub_category_show', {'id': sub_category.id}) }}">Voir</a>
                    <a class="btn btn-outline-warning" href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('app_sub_category_new') }}">Créer nouveau</a>
</div>
{% endblock %}
